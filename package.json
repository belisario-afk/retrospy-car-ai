{
  "name": "retrospy-car-ai",
  "version": "1.0.0",
  "private": true,
  "description": "CarAI Dash â€” RetroSpy: A retro-future green-on-black spy car dashboard with Spotify integration.",
  "homepage": "https://belisario-afk.github.io/retrospy-car-ai",
  "scripts": {
    "start": "react-scripts start",
    "prebuild": "node scripts/validate-env.js",
    "build": "react-scripts build",
    "postbuild": "node scripts/copy-404.js",
    "deploy": "npm run build && gh-pages -d build -b gh-pages",
    "test": "jest",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "axios": "^1.7.2",
    "classnames": "^2.5.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^4.11.0",
    "react-scripts": "5.0.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.45",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/spotify-api": "^0.0.24",
    "@types/spotify-web-playback-sdk": "^0.1.18",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "gh-pages": "^6.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "postcss": "^8.4.45",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10",
    "ts-jest": "^29.2.5",
    "typescript": "4.9.5"
  },
  "browserslist": {
    "production": [">0.5%", "not dead", "defaults"],
    "development": ["last 1 chrome version", "last 1 firefox version", "last 1 safari version"]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": ["react", "react-hooks", "@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "settings": { "react": { "version": "detect" } },
    "env": { "browser": true, "es2021": true, "jest": true, "node": true },
    "rules": {
      "react/react-in-jsx-scope": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "prettier": { "semi": true, "singleQuote": false, "trailingComma": "none", "printWidth": 100 }
}